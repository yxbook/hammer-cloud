	<id column="id" jdbcType="INTEGER" property="id" />
	<result column="product_no" jdbcType="VARCHAR" property="productNo" />
	<result column="product_name" jdbcType="VARCHAR" property="productName" />
	<result column="prodcut_price" jdbcType="BigDecimal" property="prodcutPrice" />
	<result column="prodcut_stock" jdbcType="BigDecimal" property="prodcutStock" />
	<result column="prodcut_sum" jdbcType="BigDecimal" property="prodcutSum" />
	<result column="prodcut_icon" jdbcType="VARCHAR" property="prodcutIcon" />
	<result column="status" jdbcType="INTEGER" property="status" />
	<result column="category_type" jdbcType="INTEGER" property="categoryType" />
	<result column="user_id" jdbcType="INTEGER" property="userId" />
	<result column="update_time" jdbcType="TIMESTAMP" property="updateTime" />
	<result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
	<result column="product_detail" jdbcType="VARCHAR" property="productDetail" />
	<result column="product_type" jdbcType="INTEGER" property="productType" />
	<result column="currency" jdbcType="INTEGER" property="currency" />
	<result column="max_price" jdbcType="BigDecimal" property="maxPrice" />
	<result column="min_limit" jdbcType="BigDecimal" property="minLimit" />
	<result column="max_limit" jdbcType="BigDecimal" property="maxLimit" />
	<result column="payment_term" jdbcType="INTEGER" property="paymentTerm" />
</resultMap>

	<resultMap id="DtoResultMap" type="com.fmkj.order.dao.dto.ProductDto">
		<id column="id" jdbcType="INTEGER" property="id" />
		<result column="product_no" jdbcType="VARCHAR" property="productNo" />
		<result column="product_name" jdbcType="VARCHAR" property="productName" />
		<result column="prodcut_price" jdbcType="BigDecimal" property="prodcutPrice" />
		<result column="prodcut_stock" jdbcType="BigDecimal" property="prodcutStock" />
		<result column="prodcut_sum" jdbcType="BigDecimal" property="prodcutSum" />
		<result column="prodcut_icon" jdbcType="VARCHAR" property="prodcutIcon" />
		<result column="status" jdbcType="INTEGER" property="status" />
		<result column="category_type" jdbcType="INTEGER" property="categoryType" />
		<result column="user_id" jdbcType="INTEGER" property="userId" />
		<result column="update_time" jdbcType="TIMESTAMP" property="updateTime" />
		<result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
		<result column="product_detail" jdbcType="VARCHAR" property="productDetail" />
		<result column="product_type" jdbcType="INTEGER" property="productType" />
		<result column="currency" jdbcType="INTEGER" property="currency" />
		<result column="max_price" jdbcType="BigDecimal" property="maxPrice" />
		<result column="min_limit" jdbcType="BigDecimal" property="minLimit" />
		<result column="max_limit" jdbcType="BigDecimal" property="maxLimit" />
		<result column="payment_term" jdbcType="INTEGER" property="paymentTerm" />
		<!--<association property="hcAccount" column="hcAccount" javaType="com.fmkj.order.dao.domain.HcAccount">
			<result column="nation" property="nation" />
			<result column="telephone" property="telephone" />
		</association>-->
	</resultMap>

	<select id="queryProductPage" parameterType="com.fmkj.order.dao.queryVo.ProductQueryVo" resultMap="DtoResultMap">
		SELECT
		  id AS id,
		  product_no AS productNo,
		  product_name AS productName,
		  prodcut_sum AS prodcutSum,
		  prodcut_price AS prodcutPrice,
		  prodcut_stock AS prodcutStock,
		  prodcut_icon AS prodcutIcon,
		  `status`,
		  category_type AS categoryType,
		  user_id AS userId,
		  create_time AS createTime,
		  update_time AS updateTime,
		  product_detail AS productDetail,
		  product_type AS productType,
		  currency,
		  max_price AS maxPrice,
		  min_limit AS minLimit,
		  max_limit AS maxLimit,
		  payment_term AS paymentTerm
		FROM
		  fm_product_info
	</select>

</mapper>