<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fmkj.race.dao.mapper.GcJoinactivityrecordMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.fmkj.race.dao.domain.GcJoinactivityrecord">
        <id column="Id" property="Id"/>
        <result column="uid" property="uid"/>
        <result column="aid" property="aid"/>
        <result column="isChain" property="isChain"/>
        <result column="time" property="time"/>
    </resultMap>

    <resultMap id="BaseResultMap1" type="java.util.HashMap"></resultMap>

    <select id="queryJoinActivityByAid" parameterType="com.fmkj.race.dao.queryVo.GcBaseModel"
            resultMap="BaseResultMap1">
       select  jr.time, ac.nickname,ac.nickname,ac.score
       from gc_joinactivityrecord  jr
       inner join  hc_account  ac
       on jr.uid=ac.id
       where jr.aid=#{aid}
       ORDER BY jr.time DESC
    </select>

</mapper>
