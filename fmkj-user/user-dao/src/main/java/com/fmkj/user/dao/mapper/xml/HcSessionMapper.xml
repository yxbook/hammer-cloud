    </select>-->

    <!--更新session表-->
    <update id="updateHcSession"  parameterType="com.fmkj.race.dao.domain.HcSession">
        update hc_session set
                token = #{token},
                btime = #{btime},
                etime = #{etime},
                ltime = #{ltime}
        where uid = #{uid}
    </update>



